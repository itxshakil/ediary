{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The Laravel Framework.",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "guzzlehttp/guzzle": "^7.0.1",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.0",
        "laravel/ui": "^4.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.16",
        "driftingly/rector-laravel": "^2.1",
        "fakerphp/faker": "^1.24",
        "larastan/larastan": "^3.8",
        "laravel/pint": "^1.26",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^8.1",
        "phpunit/phpunit": "^11.0",
        "rector/rector": "^2.2",
        "spatie/laravel-ignition": "^2.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "setup": [
            "composer install",
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "php artisan key:generate",
            "php artisan migrate --seed",
            "npm install",
            "npm run build"
        ],
        "test": "phpunit",
        "analyse": "phpstan analyse --memory-limit=1G",
        "lint:fix": [
            "rector process",
            "pint --dirty"
        ],
        "lint": [
            "@analyse",
            "pint --parallel"
        ],
        "qa": [
            "@lint",
            "@test"
        ]
    },
    "scripts-descriptions": {
        "setup": "Fresh project setup: install dependencies, copy .env, generate key, run migrations/seeders, install NPM packages and build assets.",
        "test:types": "Run PHPStan static analysis with extended memory limit.",
        "test": "Run the PHPUnit test suite",
        "analyse": "Run static analysis using PHPStan",
        "lint:fix": "Automatically fix code style issues using Rector and Laravel Pint",
        "lint": "Run static analysis and code style checks without modifying files",
        "qa": "Run full quality assurance checks (lint + tests)"
    }
}
